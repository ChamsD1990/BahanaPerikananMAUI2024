                    <Frame BorderColor="Gray" Padding="0" >
                        <Editor Placeholder="ditambahkan jika diperlukan" HorizontalOptions="FillAndExpand" HeightRequest="200"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="25" />

                <VerticalStackLayout Grid.Row="26" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
