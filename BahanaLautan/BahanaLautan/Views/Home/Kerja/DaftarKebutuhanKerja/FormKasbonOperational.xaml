             Title="FormKasbonOperational">

    
    <ScrollView HorizontalOptions="Fill" VerticalOptions="Fill">
        <StackLayout VerticalOptions="Fill" HorizontalOptions="Fill" Padding="20, 0, 20, 0">
            <Grid x:Name="MainGrid" HorizontalOptions="Fill" VerticalOptions="Fill">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <VerticalStackLayout Grid.Row="0" Padding="0" Margin="0"
                VerticalOptions="Fill" HorizontalOptions="Fill">
                    <Label Text="No kasbon operational" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="insert here" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="1" />

                <VerticalStackLayout Grid.Row="2" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="No Reff Input Keberangkatan" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="insert here" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="3" />

                <VerticalStackLayout Grid.Row="4" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Tanggal" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <DatePicker HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="5" />

                <VerticalStackLayout Grid.Row="6" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Kapal" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="auto from login" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="7" />

                <VerticalStackLayout Grid.Row="8" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Homebase" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="mengikuti master kapal" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="9" />

                <VerticalStackLayout Grid.Row="10" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Note Lokasi kapal" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="mengikuti master kapal" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="11" />

                <VerticalStackLayout Grid.Row="12" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Group" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="mengikuti master kapal" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="13" />

                <VerticalStackLayout Grid.Row="14" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="User" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="mengikuti master kapal" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="15" />

                <VerticalStackLayout Grid.Row="16" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Jabatan" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="mengikuti master kapal" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="17" />

                <VerticalStackLayout Grid.Row="18" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Jenis Kasbon" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Kasbon Operasional" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="19" />

                <VerticalStackLayout Grid.Row="20" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Nominal" />
                    <Frame BorderColor="Gray" Padding="0" >
                        <Entry Placeholder="isi manual contoh Rp.50000,-" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="21" />

                <VerticalStackLayout Grid.Row="22" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Terbilang" />
                    <Frame BorderColor="Gray" Padding="0" >
                        <Entry Placeholder="mengikuti nominal" HorizontalOptions="FillAndExpand"  />
