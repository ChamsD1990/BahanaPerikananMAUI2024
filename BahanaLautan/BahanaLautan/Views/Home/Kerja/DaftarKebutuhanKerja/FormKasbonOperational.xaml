                    <Frame BorderColor="Gray" Padding="0" >
                        <Entry Placeholder="sesuai login" HorizontalOptions="FillAndExpand"  IsReadOnly="True" BackgroundColor="Gray" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="27" />

                <VerticalStackLayout Grid.Row="28" Padding="0" Margin="0, 0, 0, 10"
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Koordinator (Menyetujui) " />
                    <Frame BorderColor="Gray" Padding="0" >
                        <Entry Placeholder="sesuai login" HorizontalOptions="FillAndExpand" IsReadOnly="True"  BackgroundColor="Gray"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="29" />

                <VerticalStackLayout Grid.Row="30" Padding="0" Margin="0, 0, 0, 10" 
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Kepala Cabang (Menyetujui) " />
                    <Frame BorderColor="Gray" Padding="0" >
                        <Entry Placeholder="sesuai login" HorizontalOptions="FillAndExpand" IsReadOnly="True"  BackgroundColor="Gray"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout HeightRequest="10" Grid.Row="31" />

                <VerticalStackLayout Grid.Row="32" Padding="0" Margin="0, 0, 0, 10" 
                VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="Kepala Pusat (Menyetujui) " />
                    <Frame BorderColor="Gray" Padding="0" >
                        <Entry Placeholder="sesuai login" HorizontalOptions="FillAndExpand" IsReadOnly="True"  BackgroundColor="Gray" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout  Grid.Row="33" Grid.Column="0" 
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">
                    <Frame 
            BackgroundColor="Blue" 
            Padding="10" CornerRadius="5" HasShadow="True" HorizontalOptions="FillAndExpand">
                        <HorizontalStackLayout
                                   HorizontalOptions="CenterAndExpand"
                                   VerticalOptions="CenterAndExpand">
                            <Label Text="Tambah" TextColor="White" 
                                   HorizontalOptions="CenterAndExpand"
                                   VerticalOptions="CenterAndExpand" Margin="5,0"/>
                        </HorizontalStackLayout>
                        <!--<Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnListPerbaikan" />
            </Frame.GestureRecognizers>-->
                    </Frame>
                </VerticalStackLayout>


            </Grid>
        </StackLayout>
    </ScrollView>



</ContentPage> 