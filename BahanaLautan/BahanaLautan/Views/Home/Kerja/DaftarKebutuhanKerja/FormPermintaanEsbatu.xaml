<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BahanaLautan.Views.Home.Kerja.DaftarKebutuhanKerja.FormPermintaanEsbatu"
             Title="FormPermintaanEsbatu">

    <ScrollView 
            HorizontalOptions="Fill"> 
        <StackLayout
            HorizontalOptions="Fill"
            > 
            <Grid x:Name="MainGrid" HorizontalOptions="Fill" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <VerticalStackLayout Grid.Row="0" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="No Form Permintaan Es Batu" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry PlaceholderColor="White" Placeholder="-" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="No Reff Form Input Keberangkatan" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry PlaceholderColor="White" Placeholder="-" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="2" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Tanggal Permintaann" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <DatePicker TextColor="White" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="3" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Kapal" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry PlaceholderColor="White" Placeholder="auto sesuai login" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="4" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Homebase" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry PlaceholderColor="White" Placeholder="auto sesuai login" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="5" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Note Lokasi Kapal" />
                    <Frame BorderColor="Gray" Padding="0" >
                        <Editor PlaceholderColor="Gray" Placeholder="auto sesuai login" HorizontalOptions="FillAndExpand" 
                                HeightRequest="100"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="6" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Group" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray" >
                        <Entry PlaceholderColor="White" Placeholder="auto sesuai login" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="7" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="User" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray" >
                        <Entry PlaceholderColor="White" Placeholder="auto sesuai login" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="8" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Jabatan" />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray" >
                        <Entry PlaceholderColor="White" Placeholder="auto sesuai login" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="9" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Frame BorderColor="Gray" Padding="0" >
                        <VerticalStackLayout 
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">
                            <Label Text="Es Batu" FontAttributes="Bold" FontSize="22" 
                                   Padding="10, 10, 10, 10"/>
                            <VerticalStackLayout Padding="10, 0, 10, 10" 
                                VerticalOptions="FillAndExpand"
                                HorizontalOptions="FillAndExpand">
                                <Label Text="Jenis Barang" />
                                <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray" >
                                    <Entry PlaceholderColor="White" Placeholder="auto sesuai login" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                                </Frame>
                            </VerticalStackLayout>
                            <VerticalStackLayout Padding="10, 0, 10, 10" 
                                VerticalOptions="FillAndExpand"
                                HorizontalOptions="FillAndExpand">
                                <Label Text="Group Barang" />
                                <Frame BorderColor="Gray" Padding="0" >
                                    <Picker Title="Select Option" 
                                        SelectedIndexChanged="OnPickerSelectedIndexChanged">
                                        <Picker.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Option 1</x:String>
                                                <x:String>Option 2</x:String>
                                                <x:String>Option 3</x:String>
                                            </x:Array>
                                        </Picker.ItemsSource>
                                    </Picker> 
                                </Frame>
                            </VerticalStackLayout>
                            
                            <VerticalStackLayout Padding="10, 0, 10, 10" 
                                VerticalOptions="FillAndExpand"
                                HorizontalOptions="FillAndExpand">
                                <Label Text="Quantity" />
                                <Frame BorderColor="Gray" Padding="0" >
                                    <Entry PlaceholderColor="Gray" Placeholder="isi manual dengan angka" HorizontalOptions="FillAndExpand" />
                                </Frame>
                            </VerticalStackLayout>
                            <VerticalStackLayout
                                HorizontalOptions="Fill"
                                VerticalOptions="Fill" Padding="10, 0, 10, 0" Margin="0, 0, 0, 10">
                                <Frame 
                                    BackgroundColor="Blue" 
                                    Padding="10" CornerRadius="5" HasShadow="True" HorizontalOptions="FillAndExpand">
                                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                        <Label Text="Submit" TextColor="White" VerticalOptions="Center" Margin="5,0"/>
                                    </HorizontalStackLayout>
                                    <!--<Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnListPerbaikan" />
                                    </Frame.GestureRecognizers>-->
                                </Frame>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="10" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Kepala Koordinator (Menyetujui) " />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray" >
                        <Entry PlaceholderColor="White" Placeholder="auto sesuai login" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="11" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Kepala Cabang (Menyetujui) " />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray" >
                        <Entry PlaceholderColor="White" Placeholder="auto sesuai login" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="12" Padding="10, 0, 10, 10" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Keuangan Pusat (Menyetujui) " />
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray" >
                        <Entry PlaceholderColor="White" Placeholder="auto sesuai login" IsReadOnly="True" HorizontalOptions="FillAndExpand" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="13"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill" Padding="10, 0, 10, 0" Margin="0, 0, 0, 10">
                    <Frame BackgroundColor="Blue" Padding="10" CornerRadius="5" HasShadow="True" HorizontalOptions="FillAndExpand">
                        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="Submit" TextColor="White" VerticalOptions="Center" Margin="5,0"/>
                        </HorizontalStackLayout>
                        <!--<Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnListPerbaikan" />
                                    </Frame.GestureRecognizers>-->
                    </Frame>
                </VerticalStackLayout>


            </Grid>
            
        </StackLayout>
    </ScrollView>
    
</ContentPage>