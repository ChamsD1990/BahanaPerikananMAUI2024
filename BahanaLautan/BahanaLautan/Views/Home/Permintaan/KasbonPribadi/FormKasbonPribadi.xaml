<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BahanaLautan.Views.Home.Permintaan.KasbonPribadi.FormKasbonPribadi"
             Title="FormKasbonPribadi">

    <ScrollView>
        <StackLayout Padding="20, 0, 20, 0">
            <Grid x:Name="MainGrid" HorizontalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!---->

                <VerticalStackLayout Grid.Row="0" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="No Form Kasbon Pribadi"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Enter No Form" IsReadOnly="True"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Tanggal"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <DatePicker />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="2" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="User"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Enter No Form" IsReadOnly="True"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="3" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Jabatan"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Enter No Form" IsReadOnly="True"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="4" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Jenis Kasbon"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Kasbon Pribadi" IsReadOnly="True"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="5" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Nominal"/>
                    <Frame BorderColor="Gray" Padding="0" >
                        <Entry Placeholder="Enter No Form" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="6" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Terbilang"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Editor Placeholder="Enter No Form" IsReadOnly="True"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="7" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Keterangan"/>
                    <Frame BorderColor="Gray" Padding="0" >
                        <Editor Placeholder="Enter No Form" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="8" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Yang Mengajukan"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Kasbon Pribadi" IsReadOnly="True"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="9" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Koordinator (Menyetujui)"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Kasbon Pribadi" IsReadOnly="True"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="10" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Kepala Cabang (Menyetujui)"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Kasbon Pribadi" IsReadOnly="True"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="11" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Keuangan Pusat (Menyetujui)"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Kasbon Pribadi" IsReadOnly="True"/>
                    </Frame>
                </VerticalStackLayout>


                <VerticalStackLayout Grid.Row="12" Padding="0" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Frame 
                        BackgroundColor="Blue" 
                        Padding="10" CornerRadius="5" HasShadow="True" Margin="0,0,0,0" 
                        HorizontalOptions="FillAndExpand">
                        <HorizontalStackLayout 
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="CenterAndExpand">
                            <Label Text="Simpan" TextColor="White" VerticalOptions="FillAndExpand" 
                                   Margin="5,0" VerticalTextAlignment="Center" 
                                   HorizontalOptions="FillAndExpand"
                                   HorizontalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                        <!--
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnListPerbaikan" />
                </Frame.GestureRecognizers>
                -->
                    </Frame>
                </VerticalStackLayout>
            </Grid>
        </StackLayout>
    </ScrollView>

</ContentPage>