<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BahanaLautan.Views.Home.Permintaan.PermintaanSparepart.FormPermintaanSparepart"
             Title="FormPermintaanSparepart">


    <ScrollView>
        <StackLayout Padding="20, 0, 20, 0">
            <Grid x:Name="MainGrid" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!---->

                <VerticalStackLayout Grid.Row="0" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="No Form Sparepart"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Enter No Form" IsReadOnly="True" PlaceholderColor="White"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="No Reff Form Permintaan Perbaikan Kapal"/>
                    <Frame BorderColor="Gray" Padding="0" >
                        <Entry Placeholder="Enter No Form" PlaceholderColor="Gray"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="2" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Tanggal"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <DatePicker TextColor="White"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="3" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Kapal"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Enter No Form" IsReadOnly="True" PlaceholderColor="White"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="4" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Homebase"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Enter No Form" IsReadOnly="True" PlaceholderColor="White"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="5" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Note Lokasi Kapal"/>
                    <Frame BorderColor="Gray" Padding="0" >
                        <Editor Placeholder="Enter No Form" PlaceholderColor="Gray" HeightRequest="200"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="6" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Group"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Enter No Form" IsReadOnly="True" PlaceholderColor="White"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="7" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Label Text="Jabatan"/>
                    <Frame BorderColor="Gray" Padding="0" BackgroundColor="Gray">
                        <Entry Placeholder="Enter No Form" IsReadOnly="True" PlaceholderColor="White"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="8" Padding="0" Margin="0, 0, 0, 10"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Frame BorderColor="Gray" Padding="10">
                        <VerticalStackLayout>
                            <Label Text="Sparepart" Padding="0, 0, 20, 20" FontAttributes="Bold" 
                                   FontSize="22" />
                            <Label Text="Nama Barang" FontSize="14" />
                            <Frame BorderColor="Gray" Padding="0">
                                <Picker x:Name="MyPicker" Title="Choose an option" >
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Jala</x:String>
                                            <x:String>Pancing</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Frame>
                            <Label Text="Quantity" FontSize="14" Padding="0, 20, 0, 0"/>
                            <Frame BorderColor="Gray" Padding="0">
                                <Entry Placeholder="isi manual dengan format angka" IsReadOnly="True" PlaceholderColor="Gray"/>
                            </Frame>
                            <Label Text="Keterangan" FontSize="14" Padding="0, 20, 0, 0"/>
                            <Frame BorderColor="Gray" Padding="0">
                                <Entry Placeholder="isi manual" IsReadOnly="True" PlaceholderColor="Gray"/>

                            </Frame>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>


                <VerticalStackLayout Grid.Row="9" Padding="0" Margin="0, 0, 0, 20"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Frame 
                        BackgroundColor="Blue" 
                        Padding="10" CornerRadius="5" HasShadow="True" Margin="0,10,0,0" 
                        HorizontalOptions="FillAndExpand">
                        <HorizontalStackLayout 
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="CenterAndExpand">
                            <Label Text="Simpan" TextColor="White" VerticalOptions="FillAndExpand" 
                                   Margin="5,0" VerticalTextAlignment="Center" 
                                   HorizontalOptions="FillAndExpand"
                                   HorizontalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                        <!--
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnListPerbaikan" />
                </Frame.GestureRecognizers>
                -->
                    </Frame>
                </VerticalStackLayout>

            </Grid>
        </StackLayout>
    </ScrollView>


</ContentPage>